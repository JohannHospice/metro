doctype html
html

  head
    title= title
    link(href='/css/uikit.min.css' rel='stylesheet')
    script(src='/js/jquery-3.2.0.min.js')
    script(src='/js/uikit.min.js')
    block head
  body

    nav(class="uk-navbar")
      div(class="uk-container uk-container-center")
        ul(class="uk-navbar-nav")
          each link, name in routes
            li(class={'uk-active': currentUrl == link})
              a(href=link)= name

    div(class='uk-block')
      div(class='uk-container uk-container-center')
        block content

    block footer